  "paths": {
    "/contacts/{id}": {
      "tags": [
        "Contacts"
      ],
      "summary": "Get contact by id",
      "operationId": "getContact",
      "description": "Get contact by id",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "required": true,
          "schema": {
            "type": "string",
            "example": "6694883cea2bf36a6ff9ca9c"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Get contact by id",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "status",
                  "message",
                  "data"
                ],
                "properties": {
                  "status": {
                    "type": "integer",
                    "example": 200
                  },
                  "message": {
                    "type": "string",
                    "example": "Successfully found contact with id 6694883cea2bf36a6ff9ca9c!"
                  },
                  "data": {
                    "type": "object",
                    "$ref": "../../../components/schemas/contacts.yaml"
                  }
                }
              }
            }
          }
        },
        "404": {
          "$ref": "../../../components/responses/404.yaml"
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
